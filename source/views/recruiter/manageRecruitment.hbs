<div class="container">
    <h2 class="mt-3 text-center">Quản lý tin tuyển dụng</h2>
    <button onclick="location.href = '/recruiter/add'" class="btn btn-success">Thêm mới tin tuyển dụng</button>
    <table class="table">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Hình ảnh</th>
                <th>Lương</th>
                <th>Hình thức làm việc</th>
                <th>Địa chỉ</th>
                <th>Ngày đến hạn</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            {{#each recruitmentList}}
            <tr>
                <td>{{title}}</td>
                <td>
                    <img style="width: 50px;" src="images/recruitments/{{image}}" alt="">
                </td>
                <td>{{salary}}</td>
                <td>{{workingWay}}</td>
                <td>{{address.district.name}} , {{address.province.name}}</td>
                <td>{{formatDMY deadlineSubmis}}</td>
                <td>
                    <i class="fa-solid fa-pen-to-square icon icon-edit"></i>
                    <a href="/recruiter/detail/{{_id}}">
                        <i class="fa-solid fa-circle-info icon icon-infor"></i>
                    </a>
                    <i class="fa-solid fa-trash icon icon-delete btn-delete" data-bs-toggle="modal"
                        data-bs-target="#deleteModal" data-id="{{_id}}"></i>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel"><strong>
                    Xóa tin tuyển dụng
                </strong></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Bạn có chắc muốn xóa tin tuyển dụng này không ?
                </h6>
                
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-close" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="submit" class="btn btn-danger" id="confirm-del">Xóa</button>
            </div>
        </div>
    </div>
</div>

<script src="/js/home-recruiter.js"></script>